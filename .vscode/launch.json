{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug (GDB)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/${fileBasenameNoExtension}", // Update this to your executable path
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "ignoreFailures": true,
            "text": "-enable-pretty-printing"
          }
        ],
        "preLaunchTask": "C/C++: clang++ build active file",
        "miDebuggerPath": "/usr/local/bin/gdb", // Update this if your GDB is installed in a different path
        "internalConsoleOptions": "openOnSessionStart",
        "logging": { "engine": true }
      }
    ]
  }
  